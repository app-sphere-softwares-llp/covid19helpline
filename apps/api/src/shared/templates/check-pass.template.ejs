<div style="width: 400px; margin: auto; display: flex; justify-content: center; align-items: center;
font-family:'Arial'; border:1px solid #ccc; border-radius:4px;">

  <table width="100%">

    <tr>
      <td colspan="2" border="0" align="center" style="padding:20px;">

        <% if (passStatus.status === 'approved') { %>
          <div style="display:table-cell; text-align:center; vertical-align:middle; font-size:16px; text-transform:uppercase; font-weight:bold; border:2px solid #15D833; height: 110px; width:110px; color:#15D833; border-radius:50%;">
            <div> <%= passStatus.status %> </div>
          </div>
        <%} else { %>
            <div style="display:table-cell; text-align:center; vertical-align:middle; font-size:16px; text-transform:uppercase; font-weight:bold; border:2px solid #444; height: 110px; width:110px; color:#444; border-radius:50%;">
              <div> <%= passStatus.status %> </div>
            </div>
        <% } %>

      </td>
    </tr>

    <tr>
      <td colspan="2" border="0" align="center" style="padding-bottom:10px;border-top: 1px solid #e1e1e1;">
      </td>
    </tr>

    <tr>
      <td style="padding-left:10px; ">Name (नाम):</td>
      <td><%= firstName %> <%= lastName %></td>
    </tr>
    <tr>
      <td style="padding-left:10px; ">Aadhaar (आधार):</td>
      <td><%= aadhaarNo %></td>
    </tr>
    <tr>
      <td style="padding-left:10px; ">
        Pass Date, Time<br>
        (पास की तारीख, समय):</td>
      <td><%= passDate %></td>
    </tr>
    <tr>
      <td style="padding-left:10px; ">Valid For (के लिए मान्य):</td>
      <td><%= passValidity %> Hours</td>
    </tr>
  </table>


</div>
